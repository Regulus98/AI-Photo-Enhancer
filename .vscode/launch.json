    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch C++ Backend",
            "program": "${workspaceFolder}/out/build/x64-debug/Photo_Enhancer.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "Launch React Frontend",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "compounds": [
        {
            "name": "Launch Both",
            "configurations": ["Launch C++ Backend", "Launch React Frontend"]
        }
    ]
}